var previous = "";

function setHeader(house) {
	
	var model = house.toJSON();
	if (model.District == previous) {
		model.District = "";
	} else {
		previous = model.District;
	}
	return model;
}

var user = "undefined";

function userChk() {
	if (user == "") {
		$.welcome.text = "";
		$.logIo.title = "Login";
	} else {
		$.welcome.text = "Hi, " + user;
		$.logIo.title = "Logout";
	}
}

function login(e) {
	var loginController = Alloy.createController("login");
	$.index.activeTab.open(loginController.getView());
}