var args = arguments[0] || {};
var user = args.username;

function userChk() {
	if (user == "") {
		$.welcome.text = "";
		$.logIo.title = "Login";
	} else {
		$.welcome.text = "Hi, " + user;
		$.logIo.title = "Logout";
	}
}

function logOut(e) {
	if (e.row.title == "Login") {
		console.log("login");
		var loginController = Alloy.createController("login");
		$.index.activeTab.open(loginController.getView());
	} else {
		user = "";
		userChk();
		console.log("logout");			
	}
}



function userLog(e) {
	if (e.row.title == "Login") {
		console.log("login");
		var loginController = Alloy.createController("login");
		$.index.activeTab.open(loginController.getView());
	} else {
		user = "";
		userChk();
		console.log("logout");	
		
	}
}